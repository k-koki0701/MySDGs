<table>
<% @posts.each do |post| %>
  <tr>
    <td><%=link_to post.user.name, user_path(post.user.id) %></td>
  </tr>
  <tr>
    <td>カテゴリー：</td>
  </tr>
  <tr>
  <td>
  <div class="swiper-container">
    <div class= "swiper-wrapper img-index">
      <% post.pictures.each do |picture| %>
        <% if picture[:image] != nil %>
          <%= image_tag picture.image.url,  size: "200x300", class: "swiper-slide index-img" %>
        <% else %>
          <%= image_tag 'default.png' %>
        <% end %>
      <% end %>
    </div>
    <div class="swiper-button-prev swiper-button-white"></div>
    <div class="swiper-button-next swiper-button-white"></div>
    <div class="swiper-pagination"></div>
  </div>
  </td>
  </tr>
  <tr>
    <td><%= post.content %></td>
  </tr>
    <td><%= link_to '詳細', post_path(post.id) %></td>

<% end %>
</table>

<%= link_to '新しく投稿する', new_post_path %>
