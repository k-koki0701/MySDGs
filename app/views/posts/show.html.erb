<h1>投稿詳細画面</h1>
<% @post.pictures.each_with_index do |picture| %>
  <% if picture[:image] != nil %>
    <%= image_tag picture.image.url, size: "200x300" %>
  <% else %>
    <%= image_tag 'default.png' %>
  <% end %>
<% end %>
<p>内容: <%= @post.content %></p>
<% unless @post.user_id == current_user.id %>
  <% if @good.present? %>
    <%= link_to 'お気に入り解除する', good_path(id: @good.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', goods_path(post_id: @post.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>
<td><%= link_to "編集する", edit_post_path(@post.id) %></td>
<%= link_to '削除する', post_path(@post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
