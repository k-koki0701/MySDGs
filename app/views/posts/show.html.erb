<% content_for :css do %>
  <%= stylesheet_link_tag 'posts' %>
<% end %>

<h1>投稿詳細画面</h1>
<section class="post-show-container">
    <div class="cards">
      <div class="card card--light">
        <div class="card__slide">
          <div class="swiper-container">
            <div class="swiper-wrapper">
              <% @post.pictures.each do |picture| %>
                <% if picture[:image] != nil %>
                  <% if @post.pictures.length < 2 %>
                    <%= image_tag picture.image.url %>
                  <% else %>
                    <%= image_tag picture.image.url,class:"swiper-slide" %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
        </div>
        <div class="card__body">
          <div class="card__description">
            <% if @post.user.icon? %>
              <img src=<%= @post.user.icon%> class = "icon_image">
            <% else %>
              <img src="/assets/default.png" class="icon_image"%>
            <% end %>
              <%=link_to @post.user.name, user_path(@post.user.id), class: "post_user_name" %>
              <%= @post.goods.count %>goods
            <% unless @post.user_id == current_user.id %>
              <% if @good.present? %>
                <%= link_to 'いいねを解除する', good_path(id: @good.id), method: :delete %>
              <% else %>
                <%= link_to 'いいねする', goods_path(post_id: @post.id), method: :post %>
              <% end %>
            <% else %>
              <%= link_to "編集する", edit_post_path(@post.id) %>
              <%= link_to '削除する', post_path(@post.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
            <% end %>
            <p>
              <% @post.categories.each do |category| %>
                #<%= category.name %>
              <% end %>
            </p>
            <p class="post-content"><%= @post.content %></p>
          </div>
        </div>
      </div>
      <h2>コメント一覧</h2>
      <% @comments.each do |c| %>
        <div>
          <%= c.user.name %>
          <%= c.content %>
          <hr>
        </div>
      <% end %>

      <%= form_with(model: [@post, @comment], method: :post) do |f| %>
        <%= f.text_area :content %>
        <%= f.hidden_field :post_id, value: @post.id %>
        <br>
        <%= f.submit 'コメントする',class:"comment-submit" %>
      <% end %>
    </div>
</section>




<%= javascript_include_tag 'posts.js' %>
