<% content_for :css do %>
  <%= stylesheet_link_tag 'posts' %>
<% end %>

<%= form_with(model: @post, local: true) do |form| %>
  <div class="form-group">
    <%= form.fields_for :pictures do |a| %>
      <%= a.label :image %><br>
      <%= a.file_field :image %>
      <%= a.hidden_field :image_cache %>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :カテゴリ %>
    <%= form.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
      <% end %>
    <% end %>
    <% if @post.errors.include?(:category_ids) %>
      <p style="color: red;"><%= @post.errors.full_messages_for(:category_ids).first %>
    <% end %>
  </div>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class:"form-control", placeholder:"投稿内容", size: "20x5" %>
    <% if @post.errors.include?(:content) %>
      <p style="color: red;"><%= @post.errors.full_messages_for(:content).first %>
    <% end %>
  </div>
  <div class="form-group submit submit-post">
    <%= form.submit class:"btn-light"%>
  </div>
<% end %>


<div class="posts-link">
  <%= link_to '一覧に戻る', posts_path, class:"post-index-link" %>
</div>

<%= javascript_include_tag 'posts.js' %>
