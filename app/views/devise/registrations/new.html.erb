<% content_for :css do %>
  <%= stylesheet_link_tag 'sign_up' %>
<% end %>

<div class="container-fluid">
<div class="row main-content bg-success text-center">
  <div class="col-md-4 text-center company__info">
    <span class="company__logo"><img id="b" class="img-responsive img-circle img-rounded img-center pull-left" src="<%= asset_path "mysdgs_logo.png" %>"></span>
  </div>
  <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
    <div class="container-fluid">
      <div class="row">
        <h1>新規登録</h1>
      </div>
      <div class="row">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="row">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", id:"name", class:"form__input",placeholder:"ユーザーネーム" %>
          </div>
          <div class="row">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"email", class:"form__input",placeholder:"メールアドレス" %>
          </div>
          <div class="row">
            <%= f.password_field :password, autocomplete: "new-password", id:"password", class:"form__input", placeholder:"パスワード(6文字以上)" %>
            <span>
            <i class="fa fa-eye fa-2x" aria-hidden="true"  type="button" id="eye"></i>
          </span>
          </div>
          <div class="row">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", id:"confirm_password", class:"form__input", placeholder:"確認用パスワード"%>
          </div>
          <div class="row">
            <%= f.submit t('.sign_up') ,class:"botton submit"%>
          </div>
        <% end %>
        </div>
    </div>
  </div>
</div>
</div>


<%= javascript_include_tag 'log_in.js' %>
