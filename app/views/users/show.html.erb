<% if @user.icon? %>
  <img src=<%= @user.icon%> class = "profile_icon_image">
<% else %>
  <img src="/assets/default.png" class="profile_icon_image"%>
<% end %>
<p class="profile_user_name"><%= @user.name %></p>
<p>プロフィール : <%= @user.self_introduction %></p>

<%= link_to 'いいね一覧', goods_path %>
<%= link_to 'ユーザー一覧', users_path %>
<% if @user.id == current_user.id %>
  <%= link_to '編集', edit_user_registration_path %>
<% else %>
  <%= render 'follow_form', user: @user %>
<% end %>
