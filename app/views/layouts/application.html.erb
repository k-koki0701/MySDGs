<!DOCTYPE html>
<html>
  <head>
    <title>Mysdgs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Comfortaa:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Old+Standard+TT' rel='stylesheet' type='text/css'>
    <link href="style.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :css %>
  </head>

  <body>
  <div class="wrapper-main" >
    <header class="main-header">
      <div class="header-wrapper">
        <div class="main-logo">
          <img class="header_logo" src="<%= asset_path "header_logo.png" %>">
        </div>
        <nav>
          <ul class="main-menu">
          <li class="notice"><%= notice %></li>
          <li class="alert"><%= alert %></li>
          <% if user_signed_in? %>
            <li><%= link_to "投稿", posts_path %></li>
            <li><%= link_to "イベント", events_path %></li>
            <li><%= link_to "メッセージ一覧",  conversations_path %></li>
            <li><%= link_to "マイページ", user_path(current_user) %></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <% if current_user.try(:admin?) %>
              <li><%= link_to '管理メニュー', rails_admin_path %></li>
            <% end %>
          <% else %>
            <li><%= link_to "新規登録", new_user_registration_path %></li>
            <li><%= link_to "ログイン", new_user_session_path %></li>
            <li><%= link_to 'ゲストログイン（一般）', users_guest_sign_in_path, method: :post %><li>
            <li><%= link_to 'ゲストログイン(管理者)', users_admin_guest_sign_in_path, method: :post %></li>
          <% end %>

          </ul>
        </nav>
      </div>
    </header>

      <%= yield %>

        <footer>
          <div class="footer-container">
            <div class="footer-row">
              <div class="col-lg-12">
                <p class="copyright text-muted small">Copyright &copy; My SDGs</p>
              </div>
            </div>
          </div>
        </footer>
    </div>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  </body>
</html>
