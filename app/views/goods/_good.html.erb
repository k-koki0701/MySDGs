<% if current_user.already_liked?(post) %>
  <div class="heart" >
    <%= link_to '', post_good_path(post.id, post.good_ids), method: :delete,class:"fa fa-heart fa-2x",id:"post-index-good", remote: true %></div>
<% else %>
  <div class="heart" >
    <%= link_to "" , post_goods_path(post.id), method: :post,class:"fa fa-heart-o fa-2x",id:"post-index-ungood", remote: true %></div>
<% end %>
