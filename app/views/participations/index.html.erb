<% content_for :css do %>
  <%= stylesheet_link_tag 'events' %>
<% end %>

<div class="participation-list">
  <h2>参加予定のイベント一覧</h2>

  <% if @participations.size != 0 %>
    <% @participations.each do |participation| %>
      <div class="blog-card">
    <div class="meta">
      <%= image_tag participation.event.image.url ,class:"photo"%>
      <ul class="details">
        <li class="author">主催者:<%=link_to participation.event.owner.name, user_path(participation.event.owner.id) %></td></li>
        <li class="date">作成日:<%= l participation.event.created_at , format: :short %></li>
      </ul>
    </div>
    <div class="description">
      <h1 class="event-title"><%= participation.event.title %></h1>
      開催日:<%= l participation.event.schedule , format: :long %>
      <h2>カテゴリー:<%= participation.event.category.name %></h2>
      <p><%= participation.event.content %></p>
      <p class="read-more">
        <%= link_to '詳細', event_path(participation.event.id) %>
      </p>
    </div>
  </div>
    <% end %>
  <% else %>
    <p>参加予定のイベントはありません。</p>
  <% end %>

  <%= link_to "イベント一覧へ", events_path %>

</div>
